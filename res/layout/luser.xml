<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listuseradd"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.74"
        android:drawSelectorOnTop="false" >

    </ListView>

    <LinearLayout
        android:id="@+id/LinearLayout1sdet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btrubahpwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.08"
            android:text="@string/bt_addbylocal" />

        <Button
            android:id="@+id/btadd_viaserv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_add_viaserver" />

    </LinearLayout>

    <Button
        android:id="@+id/btcancelpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_back" />

</LinearLayout>