<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tuser_detail"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.36"
            android:text="@string/nama_cust" />

        <TextView
            android:id="@+id/tnama_ub"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:text="@string/sama_dengan" />

        <TextView
            android:id="@+id/namacust_ord"
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01" >

        <TextView
            android:id="@+id/tlu_customer"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="@string/nama_sales" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/sama_dengan" />

        <TextView
            android:id="@+id/namasal_ord"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TableRow
        android:id="@+id/tbrow_view0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" >

    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.02"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jenis_trans" />

        <Spinner
            android:id="@+id/spin_crbay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TableRow
        android:id="@+id/TableRow01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" >
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.57"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btadd_ord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bt_add" />
        </LinearLayout>

        <Button
            android:id="@+id/btkembali_sinc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_back" />
    </TableRow>

</LinearLayout>